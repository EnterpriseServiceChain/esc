#!/bin/cat

# SERVERS

# start from scratch and initialize dat1
cd dat1
./escd --init true
# wait for the first block to finish

# add dat2 to network
cd ../dat2
./escd -m 1 -f 1

# add dat3 to network
cd ../dat3
./escd -m 1 -f 1
# stop dat3 by pressing '.' + enter

# restart dat3 from last state
./escd -m 1
# stop dat3 by pressing '.' + enter

# start dat3 from current network state
rm msid.txt ; ./escd -m 1 -f 1
# stop dat3 by pressing '.' + enter


# USERS

# get status of user 1_0
cd ../u1_0
./esc -e ME::

# erase data
rm -rf blk/ inx/ log/ log.txt msid.txt ofi/ usr/ vip/

